<% layout("/layouts/boilerplate")%>

<div class="row">
    <div class="col-8">
        <h1 class="col-6 offset-3">SignUp on Homelander</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="Username" class="form-label">UserName:</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">Fantastic</div>
                <div class="invalid-feedback">A Pretty Name, maybe ? :&#41;</div>            
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">email:</label>
                <input name="email" id="email" type="email" class="form-control" required>
                <div class="valid-feedback">Got it.</div>
                <div class="invalid-feedback">An Valid Email address? :&#41;</div>            
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">password:</label>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="valid-feedback">We will keep it safe.</div>          
            </div>
            <button class="btn btn-success"> SignUp</button>
        </form>
    </div>
</div>
