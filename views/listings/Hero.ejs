<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<style>
    /* Hero Section */
    .hero {
        height: 100vh;
        width: 100vw;
        background-color: #000000;
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 18rem;  /* Made line slightly thicker */
        background: linear-gradient(
            90deg,
            #ff0000,  /* Red */
            #ff8000,  /* Orange */
            #ffff00,  /* Yellow */
            #00ff00,  /* Green */
            #00ffff,  /* Cyan */
            #0000ff,  /* Blue */
            #8000ff,  /* Purple */
            #ff0080   /* Pink */
        );
        top: 50%;
        transform: translateY(-50%);
        filter: blur(5rem);  /* Increased blur significantly */
        opacity: 0.4;  /* Adjusted opacity for better spread */
        animation: glow 3s ease-in-out infinite alternate;
    }

    .content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4rem;
        width: 95%;
        max-width: 1600px;
        padding: 2rem;
    }

    .tagline {
        text-align: center;
        width: 100%;
    }

    h3 {
        font-size: clamp(5rem, 8vw, 10rem); /* Significantly increased font size */
        margin: 0;
        line-height: 1.1;
        text-align: center;
        word-wrap: break-word;
        hyphens: auto;
        font-weight: 800;
        letter-spacing: -2px; /* Added for better readability at large sizes */
    }

    .button {
        margin: 0;
        transform: scale(1.2); /* Made button slightly larger */
    }

    .explore-button span {
        font-size: 2rem;
        padding: 1.2rem 2.4rem;
    }

    /* Typography */
    .brand-title {
        font-family: "Bebas Neue", sans-serif;
        font-weight: 400;
        margin: 0;
        color: #f0f0f0;
        font-size: 3.5rem !important;
        letter-spacing: 2px;
        padding: 0 1rem;
        transition: all 0.3s ease;
    }

    .brand-title:hover {
        color: #f0f0f0;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.2),
                     0 0 20px rgba(255, 255, 255, 0.2),
                     0 0 30px rgba(255, 255, 255, 0.2);
        transform: scale(1.05);
    }

    /* Button Styles */
    .explore-button {
        align-items: center;
        background-image: linear-gradient(144deg, #af40ff, #5b42f3 50%, #00ddeb);
        border: none;
        border-radius: 8px;
        box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
        color: #ffffff;
        font-size: 18px;
        min-width: 140px;
        padding: 3px;
        cursor: pointer;
        transition: all 0.3s ease;
        scale: clamp(0.8, 1vw, 1); /* Responsive button size */
        transform: scale(1.1);
    }

    .explore-button:hover span {
        background: none;
    }

    .explore-button:active {
        transform: scale(0.9);
    }

    /* Navbar Styles */
    .navbar {
        padding: 1rem 2rem;
    }

    .navbar-brand {
        margin-right: auto;
    }

    .nav-link {
        margin: 0 1rem;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #af40ff !important;
    }

    @keyframes glow {
        from {
            filter: blur(5rem) brightness(1);
            opacity: 0.6;
        }
        to {
            filter: blur(6rem) brightness(1.5);
            opacity: 0.7;
        }
    }

    /* Media Queries */
    @media (max-width: 968px) {
        .content {
            gap: 3rem;
            padding: 1.5rem;
        }

        h3 {
            font-size: clamp(3.5rem, 6vw, 7rem);
            letter-spacing: -1px;
        }

        .button {
            transform: scale(1);
        }

        .explore-button span {
            font-size: 1.5rem;
            padding: 1rem 2rem;
        }
    }

    @media (max-height: 700px) {
        h3 {
            font-size: 2rem;
        }
        
        .explore-button span {
            font-size: 1.2rem;
            padding: 0.8rem 1.2rem;
        }
    }

    @media (max-width: 768px) {
        .brand-title {
            font-size: 2.5rem !important;
        }
    }
</style>

<nav class="navbar navbar-expand-md bg-body-light fixed-top">
    <div class="container-fluid">
        <h1 class="brand-title navbar-brand">HOMELANDER</h1>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/listings">Explore</a>
                <a class="nav-link" href="/listings/new">Add new Home</a>
                <% if(!curuser) { %>
                    <a class="nav-link" href="/signup"><b>Sign up</b></a>
                    <a class="nav-link" href="/login"><b>Log in</b></a>
                <% } %>
                <% if(curuser) { %>
                    <a class="nav-link" href="/logout"><b>Log out</b></a>
                <% } %>
            </div>
        </div>
    </div>
</nav>

<div class="hero">
    <div class="content">
        <div class="tagline">
            <h3>Find Your Perfect Stay, Anywhere, Anytime!</h3>
        </div>
        <div class="button">
            <form action="/listings">
                <button class="explore-button">
                    <span>Start Exploring</span>
                </button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>