<style>
    /* Hero Section */
    .hero {
        height: 100vh;
        width: 100vw;
        background-color: #000000;
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 25rem;  /* Increased for mobile */
        background: linear-gradient(
            90deg,
            #ff0000,
            #ff8000,
            #ffff00,
            #00ff00,
            #00ffff,
            #0000ff,
            #8000ff,
            #ff0080
        );
        top: 50%;
        transform: translateY(-50%);
        filter: blur(6rem);
        opacity: 0.5;
        animation: glow 3s ease-in-out infinite alternate;
    }

    .content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 4rem;
        width: 95%;
        max-width: 1600px;
        padding: 2rem;
        height: 100%;
    }

    .tagline {
        text-align: center;
        width: 100%;
    }

    h3 {
        font-size: clamp(5rem, 8vw, 10rem);
        margin: 0;
        line-height: 1.1;
        text-align: center;
        word-wrap: break-word;
        hyphens: auto;
        font-weight: 800;
        letter-spacing: -2px;
    }

    .button {
        margin: 0;
        transform: scale(1.2); /* Made button slightly larger */
    }

    .explore-button {
        align-items: center;
        background-image: linear-gradient(144deg, #af40ff, #5b42f3 50%, #00ddeb);
        border: none;
        border-radius: 8px;
        box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
        color: #ffffff;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 3px;
        transform: scale(1.2);
    }

    .explore-button span {
        font-size: 2rem;
        padding: 1.2rem 2.4rem;
        font-weight: bold;
    }

    /* Typography */
    .brand-title {
        font-family: "Bebas Neue", sans-serif;
        font-weight: 400;
        margin: 0;
        color: #f0f0f0;
        font-size: 3.5rem !important;
        letter-spacing: 2px;
        padding: 0 1rem;
        transition: all 0.3s ease;
    }

    .brand-title:hover {
        color: #f0f0f0;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.2),
                     0 0 20px rgba(255, 255, 255, 0.2),
                     0 0 30px rgba(255, 255, 255, 0.2);
        transform: scale(1.05);
    }

    /* Button Styles */
    .explore-button:hover span {
        background: none;
    }

    .explore-button:active {
        transform: scale(0.9);
    }

    /* Navbar Styles */
    .navbar {
        padding: 1rem 2rem;
    }

    .navbar-brand {
        margin-right: auto;
    }

    .nav-link {
        margin: 0 1rem;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #af40ff !important;
    }

    @keyframes glow {
        from {
            filter: blur(5rem) brightness(1);
            opacity: 0.6;
        }
        to {
            filter: blur(6rem) brightness(1.5);
            opacity: 0.7;
        }
    }

    /* Mobile Styles */
    @media (max-width: 768px) {
        .hero {
            height: 100vh;
            width: 100vw;
            overflow-x: hidden;
            position: relative;
        }

        .hero::before {
            content: '';
            position: fixed;
            width: 200vw; /* Wider than screen */
            height: 100vh;
            background: linear-gradient(
                90deg,
                #ff0000,
                #ff8000,
                #ffff00,
                #00ff00,
                #00ffff,
                #0000ff,
                #8000ff,
                #ff0080,
                #ff0000 /* Repeat first color for seamless loop */
            );
            top: 0;
            left: 0;
            filter: blur(8rem);
            opacity: 0.6;
            animation: panGradient 15s linear infinite;
        }

        @keyframes panGradient {
            from {
                transform: translateX(0);
            }
            to {
                transform: translateX(-50%);
            }
        }

        .content {
            position: relative;
            z-index: 2;
            height: 100vh;
            width: 100vw;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 1rem;
            margin: 0;
        }

        .tagline {
            height: auto;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        h3 {
            font-size: 7rem !important;
            line-height: 0.9;
            margin: 0;
            padding: 0;
            text-align: center;
            width: 100%;
        }

        /* Navbar Mobile Styles */
        .navbar {
            background: transparent !important;
            padding: 1rem !important;
        }

        .navbar-collapse {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;
            background: rgba(0, 0, 0, 0.95);
            z-index: 1000;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem !important;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

        .navbar-collapse.show {
            opacity: 1;
            pointer-events: all;
        }

        .nav-link {
            font-size: 3rem !important;
            padding: 2rem !important;
            margin: 0.5rem 0 !important;
            width: 80vw;
            text-align: center;
            border-radius: 15px;
        }

        .navbar-toggler {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1001;
            padding: 1rem !important;
            font-size: 2rem !important;
            background: rgba(0, 0, 0, 0.8);
            border: none;
        }

        .brand-title {
            font-size: 3.5rem !important;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1001;
        }

        .explore-button {
            transform: scale(1.5);
            margin-top: 3rem;
        }

        .explore-button span {
            font-size: 2.5rem;
            padding: 1.5rem 3rem;
        }
    }

    /* Small phones - adjust only critical elements */
    @media (max-width: 380px) {
        .content {
            gap: 3rem;
        }

        h3 {
            font-size: 5.5rem !important; /* Still keeping it large */
        }

        .explore-button {
            transform: scale(1.2);
        }
    }

    /* Landscape mode */
    @media (max-height: 600px) {
        .content {
            gap: 2rem;
        }

        h3 {
            font-size: 5rem !important;
        }

        .nav-link {
            padding: 1rem 1.5rem !important;
            font-size: 1.8rem !important;
        }
    }
</style>

