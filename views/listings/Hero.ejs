<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    if (window.innerWidth <= 768) {
        // Fit text to screen
        const tagline = document.querySelector('.tagline h3');
        const content = document.querySelector('.content');
        
        function fitText() {
            let fontSize = 7;
            tagline.style.fontSize = `${fontSize}rem`;
            
            while (tagline.scrollHeight > content.clientHeight * 0.6 && fontSize > 3) {
                fontSize -= 0.5;
                tagline.style.fontSize = `${fontSize}rem`;
            }
        }

        // Run on load and resize
        fitText();
        window.addEventListener('resize', fitText);

        // Smooth navbar toggle
        const navbarToggler = document.querySelector('.navbar-toggler');
        const navbarCollapse = document.querySelector('.navbar-collapse');
        
        navbarToggler.addEventListener('click', function() {
            document.body.style.overflow = navbarCollapse.classList.contains('show') ? 'auto' : 'hidden';
        });

        // Close navbar on link click
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                navbarCollapse.classList.remove('show');
                document.body.style.overflow = 'auto';
            });
        });
    }
});
</script>